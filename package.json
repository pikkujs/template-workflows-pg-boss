{
  "name": "test-app",
  "type": "module",
  "private": true,
  "dependencies": {
    "@pikku/core": "^0.11.1",
    "@pikku/jose": "^0.11.1",
    "@pikku/schema-cfworker": "^0.11.0",
    "eventsource": "^4.0.0",
    "ws": "^8.18.3",
    "@pikku/express": "^0.11.1",
    "@pikku/pg": "^0.11.1",
    "@pikku/queue-pg-boss": "^0.11.1",
    "tslib": "^2.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9"
  },
  "devDependencies": {
    "@pikku/cli": "^0.11.2",
    "@pikku/fetch": "^0.11.1",
    "@pikku/websocket": "^0.11.0",
    "@types/node": "^24",
    "@types/ws": "^8",
    "concurrently": "^9.2.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9"
  },
  "scripts": {
    "build": "tsc -b",
    "ncu:pikku": "npx npm-check-updates -f '/@pikku/.*/'",
    "pikku": "pikku all",
    "test:http-fetch": "npx tsx client/http-fetch.ts",
    "test:http-sse": "npx tsx client/http-sse.ts",
    "test:rpc": "npx tsx client/rpc.ts",
    "test:websocket": "npx tsx client/websocket.ts",
    "test:queue": "npx tsx client/queue-worker.ts",
    "test:mcp": "npx tsx client/mcp.ts",
    "start": "tsx src/start.ts",
    "dev": "tsx --watch src/start.ts",
    "test:workflows": "tsx client/workflow-start.ts && tsx client/workflow-happy.ts && tsx client/workflow-unhappy.ts && tsx client/workflow-cancel.ts && tsx client/workflow-org-onboarding-simple.ts && tsx client/workflow-sequential-update.ts",
    "test": "npm run test:http-fetch",
    "postinstall": "pikku all",
    "stackblitz": "concurrently 'pikku watch --silent' 'npm run dev'"
  },
  "main": "src/start.ts",
  "stackblitz": {
    "startCommand": "npm run stackblitz"
  }
}